<UserControl x:Class="Picnel.io.Settings_Pages.GIF_Viewer_Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Picnel.io.Settings_Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <UserControl.Resources>
        <Style x:Key="setting_label" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="15,5"/>
        </Style>

        <Style x:Key="setting_input" TargetType="TextBox">
            <Setter Property="Margin" Value="15,5"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <TextBlock Text="Resolution" Style="{StaticResource setting_label}"/>
            <TextBox Style="{StaticResource setting_input}"/>
        </StackPanel>
    </Grid>
</UserControl>
