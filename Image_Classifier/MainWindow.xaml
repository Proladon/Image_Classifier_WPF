<Window x:Class="Image_Classifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Classifier"
        xmlns:us="clr-namespace:Image_Classifier.User_Control"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        mc:Ignorable="d"
        Title="MainWindow" Height="533" Width="1043"
        WindowStyle="None"
        MouseDown="Window_DragMove">
    <Grid x:Name="mainGrid" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="416*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="649*"/>
            <ColumnDefinition Width="214*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="Aquamarine">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="383*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Background="Red" Width="24" Click="Button_Click_1" HorizontalAlignment="Right"/>

        </Grid>
        <Grid Grid.Row="1" Grid.Column="1"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="394*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <Image Name="img_preview" Grid.Row="0" Grid.RowSpan="2" gif:AnimationBehavior.SourceUri="G:\Gif reply\GIF\move.gif" />
            <TextBox Name="imgFileName"  Grid.Row="1" Text="FileName" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Focusable="True" GotKeyboardFocus="imgFileName_GotKeyboardFocus" LostKeyboardFocus="imgFileName_LostKeyboardFocus"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="613*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Button Name="nextBtn" Grid.Column="0"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Content="Next" Background="#FF4DDEF5" FontSize="20" Click="nextBtn_Click"/>
                <Button x:Name="deleteImg_Btn" Grid.Column="1" Background="DeepPink" Click="deleteImg_Btn_Click"/>
            </Grid >
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="323*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Choose Target Folder" Click="chooseTargetFolder_Btn_Click"/>
            <Label Name="targetFolder_path" ToolTip="" Content="None" Grid.Row="1"
                       FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Button Grid.Row="2" Content="Create Target" Click="Button_Click"/>
            <ScrollViewer Grid.Row="3" Background="Gray" VerticalScrollBarVisibility="Hidden">
                <StackPanel Name="control_panel"  >
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <ScrollViewer x:Name="log_scrollViewer" Grid.Row="2" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <StackPanel x:Name="logViewer">
                <TextBlock Text="Welcome" Foreground="White" Margin="3,3"/>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Width="2"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        <GridSplitter Width="2"  Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        <GridSplitter Height="2" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  />
    </Grid>
</Window>
